@page
@model DeveloperPortfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Me";
}

<h2>Contact Me</h2>

<form method="post">

    <div>
        <input asp-for="Form.Name" placeholder="Your name" />
        <span asp-validation-for="Form.Name" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Form.Email" placeholder="Your email" />
        <span asp-validation-for="Form.Email" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Form.Subject" placeholder="Subject" />
        <span asp-validation-for="Form.Subject" class="text-danger"></span>
    </div>
    <div>
        <textarea asp-for="Form.Message" placeholder="Your message"></textarea>
        <span asp-validation-for="Form.Message" class="text-danger"></span>
    </div>
    <button type="submit">Send ➜</button>

</form>

@if (TempData["ContactSuccess"] != null)
{
    <div id="contact-success" class="alert alert-success fade show text-center mt-3">
        <i class="bi bi-check-circle me-2"></i>@TempData["ContactSuccess"]
    </div>
}




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const successBox = document.getElementById('contact-success');
            if (successBox) {
                setTimeout(() => {
                    successBox.classList.add('fade');
                    successBox.classList.add('show');

                    // Start fading
                    successBox.style.transition = 'opacity 1s ease';
                    successBox.style.opacity = '0';

                    // Remove from DOM after fade
                    setTimeout(() => {
                        successBox.remove();
                    }, 1000);
                }, 4000); // Wait 4 seconds before fading out
            }
        });
    </script>
}
