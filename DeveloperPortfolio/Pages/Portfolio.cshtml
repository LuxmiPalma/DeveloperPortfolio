@page
@model DeveloperPortfolio.Pages.PortfolioModel
@{
    ViewData["Title"] = "Portfolio";
}

<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Portfolio</h2>
        <p>Some of the projects I've built using ASP.NET Core, Razor Pages, Web API, and SQL Server.</p>
    </div>

    <!-- Portfolio Grid -->
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 portfolio-container">
            @foreach (var project in Model.Projects)
            {
                <div class="col-lg-4 col-md-6 portfolio-item">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@project.Name</h5>
                            <p class="card-text small text-muted mb-2">@project.TechStack</p>
                            <p class="card-text flex-grow-1">@project.Description</p>
                            <div class="mt-3">
                                <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark me-2">
                                    <i class="bi bi-github"></i> GitHub
                                </a>
                                <a href="@project.LiveDemoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-box-arrow-up-right"></i> Demo
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
