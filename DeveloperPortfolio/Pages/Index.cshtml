<section id="contact" class="contact section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Contact</h2>
        <p>Feel free to reach out using the form below.</p>
    </div>

    <div class="container" data-aos="fade" data-aos-delay="100">
        @if (!string.IsNullOrEmpty(Model.ContactSuccessMessage))
        {
            <div class="alert alert-success text-center mt-3">
                <i class="bi bi-check-circle me-2"></i>@Model.ContactSuccessMessage
            </div>
        }

        <div class="row gy-4">
            <!-- Contact Info Column -->
            <div class="col-lg-4">
                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                    <i class="bi bi-geo-alt flex-shrink-0"></i>
                    <div>
                        <h3>Address</h3>
                        <p>Vallhornsvägen 1,Skogås, Stockholm</p>
                    </div>
                </div>

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                    <i class="bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>Call me</h3>
                        <p>0766527901</p>
                    </div>
                </div>

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                    <i class="bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>Email me</h3>
                        <p>luxmi.palma@gmail.com</p>
                    </div>
                </div>
            </div>

            <!-- Contact Form Column -->
            <div class="col-lg-8">
                <form method="post" asp-page-handler="Contact" novalidate class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <input asp-for="ContactForm.Name" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <input asp-for="ContactForm.Email" class="form-control" placeholder="Your Email" />
                            <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <input asp-for="ContactForm.Subject" class="form-control" placeholder="Subject" />
                            <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <textarea asp-for="ContactForm.Message" class="form-control" rows="6" placeholder="Message"></textarea>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 text-center">
                            <button type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            var showToast = '@TempData["ShowToast"]';
            if (showToast === 'True') {
                $('#toast-overlay').show();
                $('.toast').toast('show');
            }

            $('.toast').on('hidden.bs.toast', function () {
                $('#toast-overlay').hide();
            });
        });
    </script>
}


