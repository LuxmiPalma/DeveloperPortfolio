<!-- /contact Section -->
<section id="contact" class="contact section bg-light py-5" style="font-family: 'Poppins', sans-serif;">
    <div class="container shadow p-5 rounded" style="background-color: #fef9f5;">
        <div class="text-start mb-4">
            <button class="btn btn-outline-warning mb-3 rounded-pill px-4 py-2 fw-bold">GET IN TOUCH</button>
            <h2 class="mb-3" style="font-family: 'Dancing Script', cursive; font-size: 2.5rem;">Contact With Me Any Queries!</h2>
            <p class="text-muted">Feel free to use the form below. I’ll get back to you as soon as possible!</p>
        </div>

        @if (!string.IsNullOrEmpty(TempData["ContactSuccessMessage"] as string))
        {
            <div class="alert alert-success text-center mt-3" id="contact-success">
                <i class="bi bi-check-circle me-2"></i>@TempData["ContactSuccessMessage"]
            </div>
        }

        <div class="row">
            <!-- Contact Form -->
            <div class="col-lg-8 mb-4">
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input asp-for="ContactForm.Name" class="form-control border border-warning-subtle rounded-pill py-2 px-3" placeholder="Your Name" />
                            <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input asp-for="ContactForm.Email" class="form-control border border-warning-subtle rounded-pill py-2 px-3" placeholder="Enter Your Email" />
                            <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input asp-for="ContactForm.Subject" class="form-control border border-warning-subtle rounded-pill py-2 px-3" placeholder="Subject" />
                        <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <textarea asp-for="ContactForm.Message" rows="5" class="form-control border border-warning-subtle rounded-4 px-3 py-2" placeholder="Your Message"></textarea>
                        <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-warning rounded-pill px-4 py-2 fw-semibold">Send Email</button>
                    </div>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-4">
                <div class="border rounded-3 p-3 mb-3">
                    <i class="bi bi-geo-alt text-warning fs-4 me-2"></i>
                    <strong class="d-block">Address</strong>
                    <p class="mb-0 text-muted">Vallhornsvägen 1, Skogås, Stockholm</p>
                </div>
                <a href="mailto:luxmi.palma@gmail.com" class="text-decoration-none">
                    <div class="border rounded-3 p-3 mb-3">
                        <i class="bi bi-envelope text-warning fs-4 me-2"></i>
                        <strong class="d-block text-dark">Mail Me</strong>
                        <p class="mb-0 text-muted">luxmi.palma@gmail.com</p>
                    </div>
                </a>
                <div class="border rounded-3 p-3 mb-3">
                    <i class="bi bi-telephone text-warning fs-4 me-2"></i>
                    <strong class="d-block">Telephone</strong>
                    <p class="mb-0 text-muted">0766527901</p>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            var showToast = '@TempData["ShowToast"]';
            if (showToast === 'True') {
                $('#toast-overlay').show();
                $('.toast').toast('show');
            }

            $('.toast').on('hidden.bs.toast', function () {
                $('#toast-overlay').hide();
            });
        });
    </script>
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}


